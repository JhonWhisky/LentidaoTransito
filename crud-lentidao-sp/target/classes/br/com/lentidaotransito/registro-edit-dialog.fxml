<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.lentidaotransito.RegistroEditController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="idLabel" text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="idField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Label text="Data/Hora:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="dataField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    
    <Label text="Corredor:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="corredorField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    
    <Label text="Sentido:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="sentidoField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    
    <Label text="Expressa:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <TextField fx:id="expressaField" GridPane.rowIndex="4" GridPane.columnIndex="1" />
    
    <Label text="Tamanho:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <TextField fx:id="tamanhoField" GridPane.rowIndex="5" GridPane.columnIndex="1" />
    
    <Label text="Região:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
    <TextField fx:id="regiaoField" GridPane.rowIndex="6" GridPane.columnIndex="1" />
    
    <Label text="Descrição:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
    <TextField fx:id="descricaoField" GridPane.rowIndex="7" GridPane.columnIndex="1" />

    <HBox alignment="BOTTOM_RIGHT" spacing="10" GridPane.rowIndex="8" GridPane.columnIndex="1">
        <Button onAction="#handleSalvar" text="Salvar" />
        <Button onAction="#handleCancelar" text="Cancelar" />
    </HBox>
</GridPane>