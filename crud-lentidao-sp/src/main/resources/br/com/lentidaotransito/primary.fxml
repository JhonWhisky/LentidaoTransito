<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_LEFT" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.lentidaotransito.PrimaryController">
   <children>
      <HBox spacing="10" alignment="CENTER_LEFT">
         <children>
            <Button fx:id="syncButton" text="Sincronizar Dados de 2018" onAction="#handleSincronizar" />
            <Label fx:id="statusLabel" text="Pronto." />
         </children>
      </HBox>
      <ProgressBar fx:id="progressBar" progress="0.0" prefWidth="600.0" />
      
      <Label text="--- Área dos Filtros ---" />
      
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>